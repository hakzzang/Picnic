<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Recommend.Title.Text" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nanumbarungothic_bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Recommend.Map.Text" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/nanumbarungothic</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Recommend.Menu.Text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nanumbarungothic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">11sp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Recommend.Bottom.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/nanumbarungothic_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Recommend.Drawer.Menu" parent="Theme.AppCompat">
        <item name="android:layout_width">@dimen/recommend_drawer_menu_size</item>
        <item name="android:layout_height">@dimen/recommend_drawer_menu_size</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>