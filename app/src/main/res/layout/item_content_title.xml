<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="title" type="String"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_content_title"
                android:text="@{title}"
                android:layout_height="@dimen/content_title_title_height"
                android:gravity="bottom"
                android:textColor="@color/black_color_00"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:fontFamily="@font/nanumbarungothic_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewHeadline5"/>
        <ImageView
                android:id="@+id/iv_tel_icon"
                android:layout_width="@dimen/content_tel_icon_size"
                android:layout_height="@dimen/content_tel_icon_size"
                android:layout_margin="@dimen/content_tel_icon_margin"
                android:src="@drawable/ic_calling"
                android:padding="@dimen/content_tel_padding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_title_rating_height"
                app:layout_constraintTop_toBottomOf="@id/tv_content_title"
                app:layout_constraintStart_toStartOf="@id/tv_content_title"
                android:gravity="bottom">
            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rb_star"
                    android:numStars="5"
                    android:rating="4"
                    android:max="5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/dd"/>
            <TextView
                    android:text="4.5"
                    android:paddingStart="@dimen/ratingbar_space_with_text"
                    android:fontFamily="@font/nanumbarungothic_light"
                    style="@style/TextViewCaption"
                    app:layout_constraintStart_toEndOf="@id/rb_star"
                    app:layout_constraintTop_toTopOf="@id/rb_star"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
