<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="tourItemInfo" type="hbs.com.picnic.data.model.TourInfo.TourItemInfo"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tv_content_title"
                android:text="@{tourItemInfo.title}"
                android:layout_height="@dimen/content_title_title_height"
                android:gravity="bottom"
                android:textColor="@color/black_color_00"
                android:layout_width="0dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:fontFamily="@font/nanumbarungothic_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextViewHeadline5"/>
        <ImageView
                android:id="@+id/iv_tel_icon"
                android:layout_width="@dimen/content_tel_icon_size"
                android:layout_height="@dimen/content_tel_icon_size"
                android:layout_margin="@dimen/content_tel_icon_margin"
                android:src="@drawable/ic_calling"
                android:padding="@dimen/content_tel_padding"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_read_count"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_title_rating_height"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_content_title"
                app:layout_constraintStart_toStartOf="@id/tv_content_title"
                android:gravity="bottom">
            <ImageView
                    android:id="@+id/iv_heart"
                    android:src="@drawable/ic_heart_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                    android:text="@{String.valueOf(tourItemInfo.readcount)}"
                    android:paddingStart="@dimen/ratingbar_space_with_text"
                    android:fontFamily="@font/nanumbarungothic_light"
                    style="@style/TextViewCaption"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/iv_heart"
                    app:layout_constraintTop_toTopOf="@id/iv_heart"
                    app:layout_constraintBottom_toBottomOf="@id/iv_heart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
                android:id="@+id/iv_pin"
                android:src="@drawable/ic_place_color_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/cl_read_count"
                app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{tourItemInfo.addr1}"
                android:paddingStart="8dp"
                android:textColor="@color/black_color_00"
                android:textSize="12sp"
                style="@style/TextViewCaption"
                app:layout_constraintTop_toTopOf="@id/iv_pin"
                app:layout_constraintBottom_toBottomOf="@id/iv_pin"
                app:layout_constraintLeft_toRightOf="@id/iv_pin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
