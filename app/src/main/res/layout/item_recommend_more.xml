<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            style="@style/MaterialListItem">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cl_container"
                android:visibility="visible">
            <ImageView
                    android:layout_width="@dimen/material_list_image_size"
                    android:layout_height="@dimen/material_list_image_size"
                    android:id="@+id/iv_thumbnail"
                    android:src="@drawable/ic_foodtruck_line"
                    android:scaleType="fitXY"
                    android:layout_marginStart="@dimen/all_padding_large_size"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/normal_text_size"
                    android:id="@+id/tv_title"
                    android:textColor="@color/black_color_00"
                    android:layout_marginTop="@dimen/all_padding_extra_large_size"
                    android:paddingStart="@dimen/jobcafe_text_with_image_padding_size"
                    tools:text="hello"
                    app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_content"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/context_text_size"
                    android:paddingStart="@dimen/jobcafe_text_with_image_padding_size"
                    tools:text="hello"
                    app:layout_constraintStart_toEndOf="@id/iv_thumbnail"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>