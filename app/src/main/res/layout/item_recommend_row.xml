<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        app:rippleColor="@android:color/transparent"
        app:cardElevation="4dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/recommend_menu_padding"
            android:paddingBottom="@dimen/recommend_padding"
            android:gravity="center">
        <ImageView
                android:id="@+id/iv_menu_icon"
                android:layout_width="@dimen/recommend_menu_icon_size"
                android:layout_height="@dimen/recommend_menu_icon_size"/>
        <TextView
                android:id="@+id/tv_menu_title"
                style="@style/Recommend.Menu.Text"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>