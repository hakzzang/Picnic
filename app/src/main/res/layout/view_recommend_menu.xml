<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/recommend_menu_padding"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tv_recommend_title"
            android:text="@string/title_recommend"
            android:layout_marginStart="@dimen/recommend_padding"
            android:background="@drawable/bg_textview_line"
            style="@style/Recommend.Title.Text"/>
    <GridView
            android:id="@+id/gv_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="4"
            android:layout_marginStart="@dimen/recommend_menu_space"
            android:layout_marginEnd="@dimen/recommend_menu_space"
            android:layout_marginTop="@dimen/recommend_top_margin"
            android:horizontalSpacing="2dp"/>
</LinearLayout>