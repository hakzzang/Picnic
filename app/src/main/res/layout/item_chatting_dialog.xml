<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
            android:id="@+id/iv_profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_profile_name"
            android:layout_marginRight="8dp"
            android:textSize="12sp"
            android:textColor="@color/black_color_00"
            app:layout_constraintRight_toLeftOf="@id/iv_profile_image"
            app:layout_constraintTop_toTopOf="@id/iv_profile_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
    />
    <TextView
            android:id="@+id/tv_chat_dialog"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:scaleY="0.8"
            android:scaleX="0.8"
            android:textAlignment="center"
            android:textColor="@color/white_color_00"
            android:background="@mipmap/ic_your_dialog"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_profile_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_profile_name"
            app:layout_constraintBottom_toBottomOf="parent">
    </TextView>
    <TextView
            android:id="@+id/tv_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewCaption"
            android:textSize="10sp"
            android:layout_marginRight="@dimen/chatting_timestamp_margin_right"
            app:layout_constraintBottom_toBottomOf="@id/tv_chat_dialog"
            app:layout_constraintRight_toLeftOf="@id/tv_chat_dialog"/>
</androidx.constraintlayout.widget.ConstraintLayout>
